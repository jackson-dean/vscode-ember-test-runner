{
	"name": "vscode-ember-test-runner",
	"displayName": "VSCode Ember Test Runner",
	"description": "Run ember tests from within vscode",
	"publisher": "jxson",
	"version": "0.0.7",
	"engines": {
		"vscode": "^1.36.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jackson-dean/vscode-ember-test-runner.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:javascript",
		"onLanguage:typescript"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.runTest",
				"title": "Ember: Run Test"
			}
		],
		"configuration": {
			"title": "Test page url",
			"properties": {
				"vscode-ember-test-runner.testPageUrl": {
					"type": "string",
					"default": "http://localhost:7375/tests/index.html?hidepassed",
					"description": "The base url used to access the test page"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.0-next.0"
	}
}
